        "BSML": {
          "Resource": "NightscoutCounter.UI.Views.NightscoutSettings.bsml",
          "Host": "NightscoutCounter.UI.NightscoutSettingsHandler",
          "Icon": "NightscoutCounter.UI.Images.nightscout-counter.png"
