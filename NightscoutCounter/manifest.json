{
  "$schema": "https://raw.githubusercontent.com/bsmg/BSIPA-MetadataFileSchema/master/Schema.json",
  "id": "NightscoutCounter",
  "name": "NightscoutCounter",
  "author": "Bobbie",
  "version": "1.1.1",
  "description": "Reads blood sugar from a nightscout site.",
